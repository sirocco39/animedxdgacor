<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Lapisan bayangan -->
    <!-- offset Y=2dp -->
    <item android:top="2dp" android:left="0dp" android:right="0dp">
        <shape android:shape="rectangle">
            <corners android:radius="25dp" />
            <!-- Menggunakan warna transparan untuk mensimulasikan bayangan buram -->
            <solid android:color="#26000000" />
        </shape>
    </item>

    <!-- Lapisan utama tombol -->
    <!-- offset Y=0dp -->
    <item android:bottom="2dp" android:left="0dp" android:right="0dp" android:top="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#FF8C00" />
            <corners android:radius="25dp" />
            <stroke android:color="#FF8C00" android:width="1dp" />
        </shape>
    </item>
</layer-list>
