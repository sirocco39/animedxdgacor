<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="105dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="16dp">

    <ImageView
        android:id="@+id/manga_cover_image"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        android:src="@drawable/spy_x_family"
        android:contentDescription="@string/manga_cover_description" />

    <TextView
        android:id="@+id/manga_title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Manga Title"
        android:textSize="14sp"
        android:fontFamily="@font/nunito_extrabold"/>

    <TextView
        android:id="@+id/manga_description_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Description"
        android:justificationMode="inter_word"
        android:textSize="11sp" />
</LinearLayout>
